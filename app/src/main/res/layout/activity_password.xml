<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cancel_details_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_details_card_textView"
            android:layout_width="290dp"
            android:layout_height="95dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:drawableRight="@drawable/ic_baseline_cancel_24"
            android:drawablePadding="300dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's verify your profile before you change your password. Please enter the OTP that has been sent to your registered number."
        android:textSize="16sp"
        android:layout_marginBottom="110dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@color/white"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="30dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:text="Resend"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Submit"
        android:textIsSelectable="true"
        android:textSize="15sp" />



</LinearLayout>